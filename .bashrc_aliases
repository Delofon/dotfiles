# some more ls aliases
alias ll='ls -lahF'
alias la='ls -A'
alias l='ls -CF'

alias cls='clear'
alias mk='mkdir -p'
alias sysmon='gnome-system-monitor'
alias taskmgr='sysmon'
alias calc='gnome-calculator'
alias sl='sl -e'
alias q='exit'
alias yay='yay -a'
alias ne='neofetch'
alias less='less -N'
alias neofetch='fastfetch -c neofetch'

alias reload='source ~/.bashrc'

eval $(thefuck --alias fuck)

mkcd ()
{
    mkdir -p $1 && cd $1
}

launchbg ()
{
    if [ -z $1 ]
    then
        echo "Usage: ${FUNCNAME} <COMMAND> [COMMAND options]"
        echo "${FUNCNAME} is short for <COMMAND> [COMMAND options] 0> /dev/null 1>&0 2>&0 & disown"
        return 0
    fi
    $@ 0> /dev/null 1>&0 2>&0 & disown
}

todo ()
{
    clr="always"

    if ! [ -t 1 ]
    then
        clr="auto"
    fi

    grp="grep --exclude-dir=.git --exclude=.bashrc_aliases --color=${clr} -rn"

    TODO=$($grp "TODO")
    FIXME=$($grp "FIXME")
    XXX=$($grp "XXX")

    IFS=''

    if [ -n "$TODO" ]
    then
        printf "====================\n%s\n" $TODO
    fi

    if [ -n "$FIXME" ]
    then
        printf "====================\n%s\n" $FIXME
    fi

    if [ -n "$XXX" ]
    then
        printf "====================\n%s\n" $XXX
    fi

    unset IFS
}

cd ()
{
    IFS=''

    if [ -z $1 ]
    then
        cd ~
        return 0
    fi

    if [ $1 = '--' ]
    then
        shift
        command cd $@
        unset IFS
        return 0
    fi

    if [ $1 = '-' ]
    then
        popd > /dev/null 2>&1
        if [ $? = '1' ]
        then
            popd -n > /dev/null 2>&1
            popd > /dev/null 2>&1
        fi
        unset IFS
        return 0
    fi

    pushd $@ > /dev/null

    unset IFS
    return 0
}

